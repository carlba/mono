{
  "extends": "@tsconfig/node24/tsconfig.json",
  "compilerOptions": {

    "sourceMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true // Skip type checking of declaration files in node_modules
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
